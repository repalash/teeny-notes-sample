{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "@cloudflare/workers-types/2023-07-01"
        ],
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "dist",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "test",
    ]
}
